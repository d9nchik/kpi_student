{
  "name": "kpi_student",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "cd frontend && npm t",
    "format": "prettier --write .",
    "format:stage": "pretty-quick --staged",
    "check-format": "prettier --check .",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend/functions && npm run lint",
    "prepare": "husky install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm i",
    "install:backend": "cd backend/functions && npm i"
  },
  "devDependencies": {
    "husky": "^5.1.3",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0"
  }
}
